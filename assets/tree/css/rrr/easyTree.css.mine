/** Easy Tree style */
#tree .easy-tree {
    min-height: 20px;
    margin-bottom: 20px;
    color: #fcaf17;
    border: none;
    border-top: none;
    padding-bottom: 15px;
}

#tree .easy-tree > ul {
    padding-left: 15px;
}

#tree .easy-tree li {
    list-style-type: none;
    margin: 0;
    padding: 10px 5px 0 5px;
    position: relative
}

#tree .easy-tree li::before, .easy-tree li::after {
    content: '';
    left: -30px;
    position: absolute;
    right: auto
}

#tree .easy-tree li::before {
    border-left: 1px solid #000;
    bottom: 50px;
    height: 100%;
    top: 0;
    width: 1px
}


#tree .easy-tree li::after {
    border-top: 1px solid #000;
    height: 20px;
    top: 30px;
    width: 35px
}

#tree .easy-tree li > span {
    border: 1px solid #000;
    border-radius: 3px;
    display: inline-block;
    padding: 5px;
    text-decoration: none
}

#tree .easy-tree li.parent_li > span {
    cursor: pointer
}


#tree .easy-tree > ul > li::before, .easy-tree > ul > li::after {
    border: 0;
}

#tree .easy-tree li:last-child::before {
    height: 30px
}

#tree .easy-tree li.parent_li > span:hover, .easy-tree li.parent_li > span:hover + ul li span {
    background: #fcaf17;
    color: #000;
}

.easy-tree li.parent_li > span:hover + ul li.li_selected span {
    background: #fcaf17;
    color: #000;
}

#tree .easy-tree li > span > a {
    color: #000;
    text-decoration: none;
}

#tree .easy-tree li > span > span.glyphicon-folder-close, .easy-tree li > span > span.glyphicon-folder-open {
    margin-right: 5px;
}

#tree .easy-tree li.li_selected > span, .easy-tree li.li_selected > span > a {
    background: #fcaf17;
    color: #000;
}

#tree .easy-tree li.li_selected > span:hover, .easy-tree li.li_selected > span:hover > a {
    background: #fafafa;
    color: #000;
}

#tree .easy-tree .easy-tree-toolbar {
    background-color: #000;
}

#tree .easy-tree .easy-tree-toolbar > div {
    display: inline-block;
}

#tree .easy-tree .easy-tree-toolbar > div > button {
    border-radius: 0;
    margin: 20px 5px;
}

#tree .easy-tree .easy-tree-toolbar .create .input-group {
    top: -15px;
    margin-left: 5px;
    margin-right: 5px;
}

#tree .easy-tree .easy-tree-toolbar .create .input-group input {
    border-radius: 0;
}

#tree .easy-tree .easy-tree-toolbar .create .input-group button {
    border-radius: 0;
}

#tree .easy-tree > ol, .easy-tree ul{padding-left:15px !important;}
